= form_for @restaurant, html: { class: "form-horizontal", role: "form" } do |f|
  -if @restaurant.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@restaurant.errors.count, "error")} prohibited this restaurant from being saved:"

      %ul
        - @restaurant.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :address, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :address, class: 'form-control'
  .form-group
    = f.label :phone, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :phone, class: 'form-control'
  .form-group
    = f.label :website, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :website, class: 'form-control'
  .form-group
    = f.label :latitude, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :latitude, class: 'form-control'
  .form-group
    = f.label :longitude, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :longitude, class: 'form-control'
  .form-group
    = f.label :category, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :category, category, {}, {class: "form-control"}
  .form-group
    = f.label :images, class: 'col-sm-2 control-label'
    .col-sm-10
      =f.file_field :images, multiple: true
      = f.hidden_field :images_cache
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
